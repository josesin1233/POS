# 🚀 Railway Hobby Plan - Environment Variables
# Copy this file to .env for local development
# For Railway deployment, set these as environment variables in Railway dashboard

# 🔑 Django Secret Key - Generate a new one for production
# Run: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-minimum-50-characters

# 🐛 Debug Mode - MUST be False for production
DEBUG=False

# 🌐 Allowed Hosts - Railway automatically provides these
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app

# 🗄️ Database Configuration 
# Railway automatically provides DATABASE_URL for PostgreSQL
# Leave this empty - Railway will inject DATABASE_URL automatically
DATABASE_URL=

# 🔒 Security Settings for HTTPS (Railway provides SSL)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# 🍪 Cookie Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# 🔄 CORS Settings - Allow your frontend domains
CORS_ALLOWED_ORIGINS=https://your-domain.com

# 📧 Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# 📁 Static Files (Railway handles this automatically)
STATIC_ROOT=staticfiles
STATIC_URL=/static/

# 📊 Logging
LOG_LEVEL=INFO

# 🚄 Railway Specific
RAILWAY_ENVIRONMENT=production
PORT=8000

# 💡 INSTRUCTIONS FOR RAILWAY DEPLOYMENT:
# 1. Create Railway account and connect GitHub repo
# 2. Add PostgreSQL service to your project
# 3. Set these environment variables in Railway dashboard:
#    - SECRET_KEY: (generate new one)
#    - DEBUG: False
#    - ALLOWED_HOSTS: *.railway.app (Railway auto-populates this)
# 4. Railway automatically provides DATABASE_URL
# 5. Deploy! 🎉